[gerrit]
	basePath = git
	canonicalWebUrl = http://localhost:8080/
[database]
	type = H2
	database = db/ReviewDB
[auth]
	type = LDAP
[ldap]
        server = ldap://%ip%
	accountBase = ou=people,dc=tuleap,dc=local
	groupBase = ou=groups,dc=tuleap,dc=local
	accountFullName = sn
	accountPattern = (cn=${username})
	accountSshUserName = cn
[sendemail]
	smtpServer = localhost
[container]
	user = gerrit
	javaHome = /usr/lib/jvm/java-7-openjdk-amd64/jre
[sshd]
	listenAddress = *:29418
[httpd]
	listenUrl = http://*:8080/
[cache]
	directory = cache
